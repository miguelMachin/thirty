{{#each message}}
  {{#if this.myMessage}}
    <div class="w3-container w3-card w3-white w3-round w3-margin" onmouseover="show('{{{this.message._id}}}');" onmouseout="hide('{{{this.message._id}}}');">
  {{else}}
   <div class="w3-container w3-card w3-white w3-round w3-margin">
  {{/if}}
  <br>         
  {{#if this.message.idUser.avatar}}
    <img title="Ampliar imagen" src="data:image/jpg;base64,{{this.message.idUser.avatar}}" alt="Avatar" class="w3-left w3-circle w3-margin-right pointer" style="width:60px;height:60px;" onclick="showImage(this.src)">
  {{else}}
    <img src="/images/avatarDef.png" alt="Avatar" class="w3-left w3-circle w3-margin-right" style="width:60px; height:60px;">
  {{/if}}
  {{#if this.myMessage}}
    <span title="Borrar publicaciÃ³n" id="{{this.message._id}}" class="w3-right xDeleteMessage hidden color607d8b" onclick="showModalConfir('{{{this.message._id}}}')"><i class="fa fa-times" aria-hidden="true"></i></span>
     <span class="w3-right w3-opacity">{{this.dateCompare}}</span>
  {{else}}
    <span class="w3-right w3-opacity" style="margin-right: 16px;">{{this.dateCompare}}</span>
  {{/if}} 
  <div class="center"><span id={{this.message.idUser._id}} class="w3-center name" onclick="perfilPerson(this.id)">{{this.name}}</span></div><br>
  <hr class="w3-clear">
  <p>{{{this.message.text}}}</p>
  <div class="w3-row-padding w3-center" style="margin:0 -16px">
    {{#if this.message.image}}
      <div style="width: 50%; margin: 0 auto;">
        <img title="Ampliar imagen" src="data:image/jpg;base64,{{this.message.image}}" style="width:100%;height:100%;" class="w3-margin-bottom borderRadius15px pointer" onclick="showImage(this.src)">
      </div>
      
    {{/if}}
   </div>
    <hr class="w3-clear">
    {{#if this.isFavorite}}
      <button title="No me gusta" id="{{this.message._id}}.{{this.message.idUser._id}}" type="button" class="w3-button w3-theme-d1 w3-margin-bottom" onclick="removeFavorites(this.id);"><i class="fa fa-thumbs-down"></i> No me gusta</button>  
    {{else}}
      <button title="Me gusta" id="{{this.message._id}}.{{this.message.idUser._id}}" type="button" class="w3-button w3-theme-d1 w3-margin-bottom" onclick="addFavorites(this.id);"><i class="fa fa-thumbs-up"></i> Me gusta</button>  
    {{/if}}
  </div>
{{/each}}
